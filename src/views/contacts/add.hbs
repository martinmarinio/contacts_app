<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    Nuevo Contacto
                </div>
                <div class="card-body">
                    <form action="/contact/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <img src="/img/contacts/contact.png" class="rounded-circle mx-auto d-block logo"
                                id="img_add" height="140">
                        </div>
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" name="name" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="lastname">Apellido</label>
                            <input type="text" name="lastname" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="tel1">Telefono 1</label>
                            <input type="text" name="tel1" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="tel2">Telefono 2</label>
                            <input type="text" name="tel2" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="email" required class="form-control">
                        </div>
                        <!--<div class="form-group">
                            <label for="image">Imagen</label>
                            <input type="file" name="image" class="form-control" id="img" onchange="upload_img(this);">
                        </div>-->
                        <div class="form-group">
                            <label for="image">Imagen</label>
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="img" onchange="upload_img(this);">
                                <label class="custom-file-label" for="customFile" id="choose_file">Choose file</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block">Aceptar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>